{
    "i18n": true,
    "type": "panel",
    "items": {
        "mqttSection": {
            "type": "panel",
            "label": "MQTT Settings",
            "items": {
                "headerMQTT": {
                    "type": "header",
                    "text": "MQTT Settings",
                    "size": 1
                },
                "useMQTT": { "type": "checkbox", "label": "Use MQTT (requires MQTT Client)", "size": "md" },
                "mqttTopic": { "type": "text", "label": "Iobroker Object containng MQTT Topic" , "size": "md" },
                "mqttUpdateInterval": {
                    "type": "number",
                    "label": "Update Interval for MQTT stream (seconds)",
                    "default": 10,
                    "min": 1,
                    "unit": "s", 
                    "size": "md" 
                }
            }
        },
        "webSection": {
            "type": "panel",
            "label": "HTML Settings",
            "items": {
                "headerHTML": {
                    "type": "header",
                    "text": "HTML Settings",
                    "size": 1
                },
                "useHtml": { "type": "checkbox", "label": "Use HTML scraping of Raw Data", "size": "md"  },
                "deviceIP": { "type": "text", "label": "Device IP", "size": "md"  },
                "htmlUpdateInterval": {
                    "type": "number",
                    "label": "Update Interval for HTML Stream (seconds)",
                    "default": 10,
                    "min": 1,
                    "unit": "s", 
                    "size": "md" 
                }
            }
        },
        "debugSection": {
            "type": "panel",
            "label": "Debug Settings",
            "items": {
                "headerDebug": {
                    "type": "header",
                    "text": "Debug Settings",
                    "size": 1
                },
                "debug": { "type": "checkbox", "label": "Enable Debug and write full data set", "size": "md"  }
            }
        }
    }
}
