{
    "i18n": true,
    "type": "panel",
    "items": {
        "mqttSection": {
            "type": "panel",
            "label": "MQTT Settings",
            "items": {
                "headerMQTT": {
                    "type": "header",
                    "text": "MQTT Settings",
                    "size": 1
                },
                "useMQTT": { "type": "checkbox",
                    "label": "Use MQTT (requires MQTT Client)",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4 },
                "mqttTopic": { "type": "text", "label": "Iobroker Object containng MQTT Topic" ,
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4 },
                "mqttUpdateInterval": {
                    "type": "number",
                    "label": "Update Interval for MQTT stream (seconds)",
                    "default": 10,
                    "min": 1,
                    "unit": "s",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4
                }
            }
        },
        "webSection": {
            "type": "panel",
            "label": "HTML Settings",
            "items": {
                "headerHTML": {
                    "type": "header",
                    "text": "HTML Settings",
                    "size": 1
                },
                "useHtml": { "type": "checkbox", "label": "Use HTML scraping of Raw Data",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4 },
                "deviceIP": { "type": "text", "label": "Device IP",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4  },
                "htmlUpdateInterval": {
                    "type": "number",
                    "label": "Update Interval for HTML Stream (seconds)",
                    "default": 10,
                    "min": 1,
                    "unit": "s",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4 
                }
            }
        },
        "debugSection": {
            "type": "panel",
            "label": "Debug Settings",
            "items": {
                "headerDebug": {
                    "type": "header",
                    "text": "Debug Settings",
                    "size": 1
                },
                "debug": { "type": "checkbox", "label": "Enable Debug and write full data set",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4  }
            }
        }
    }
}
